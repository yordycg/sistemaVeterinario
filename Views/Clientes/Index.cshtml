@using sistemaVeterinario.Helpers
@model PaginatedList<sistemaVeterinario.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center">
        <h1 class="h3 m-0 font-weight-bold text-primary text-center flex-grow-1">Gestión de Clientes</h1>
        <div class="ms-auto">
            <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-lg me-2"></i>Agregar Cliente</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-dark text-center">
                <tr>
                    <th>
                        Run
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Telefono
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Direccion
                    </th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody id="clientes-table-body">
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Run)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-icon-action btn-outline-warning btn-sm"><i class="bi bi-pencil me-0"></i></a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button class="btn btn-icon-action btn-outline-danger btn-sm btn-delete" data-id="@item.IdCliente" data-name="@item.Nombre"><i class="bi bi-trash me-0"></i></button>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            @{
                // Definir variables necesarias para la paginacion.
                // prev -> poder ir a la pagina anterior o que deshabilite...
                // next -> poder ir a la siguiente pagina o que se deshabilite...
                // total -> poder saber el total de paginas...
                var prev = !Model.HasPreviuosPage ? "disabled" : "";
                var next = !Model.HasNextPage ? "disabled" : "";
                var total = Model.TotalPages;
            }
            <nav aria-label="...">
                <ul class="pagination pagination-circle">
                    <li class="page-item @prev">
                        <a class="page-link" asp-action="Index" asp-route-pagNumber="@(Model.PageIndex-1)">Anterior</a>
                    </li>
                    @for (int i = 0; i < total; i++)
                    {
                        var activo = "";

                        if ((i + 1) == Model.PageIndex)
                        {
                            activo = "active";
                        }
                        <li class="page-item @activo">
                            <a class="page-link" asp-action="Index" asp-route-pagNumber="@(i+1)">@(i+1)</a>
                        </li>
                    }
                    <li class="page-item @next">
                        <a class="page-link" asp-action="Index" asp-route-pagNumber="@(Model.PageIndex+1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tbody = document.getElementById('clientes-table-body');
            if (tbody) {
                tbody.addEventListener('click', function (event) {
                    const deleteButton = event.target.closest('.btn-delete');
                    if (deleteButton) {
                        const clienteId = deleteButton.getAttribute('data-id');
                        const clienteName = deleteButton.getAttribute('data-name');

                        Swal.fire({
                            title: `¿Estás seguro de que quieres eliminar a ${clienteName}?`,
                            text: "¡No podrás revertir esta acción!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Sí, ¡eliminar!',
                            cancelButtonText: 'Cancelar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch(`@Url.Action("Delete", "Clientes")/${clienteId}`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    }
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data === "ok") {
                                        Swal.fire(
                                            '¡Eliminado!',
                                            `El cliente ${clienteName} ha sido eliminado.`, 
                                            'success'
                                        ).then(() => {
                                            location.reload(); // Recargar la página para reflejar el cambio
                                        });
                                    } else if (data === "has_children") {
                                        Swal.fire(
                                            'No se puede eliminar',
                                            `El cliente ${clienteName} no puede ser eliminado porque tiene mascotas asociadas.`, 
                                            'error'
                                        );
                                    } else if (data === "notfound") {
                                        Swal.fire(
                                            'Error',
                                            'El cliente no fue encontrado.',
                                            'error'
                                        );
                                    } else if (data === "error_db_constraint") {
                                        Swal.fire(
                                            'Error de Base de Datos',
                                            `El cliente ${clienteName} no puede ser eliminado debido a una restricción de la base de datos (posiblemente tiene registros asociados).`,
                                            'error'
                                        );
                                    } else {
                                        Swal.fire(
                                            'Error',
                                            'Ocurrió un error inesperado al eliminar el cliente.',
                                            'error'
                                        );
                                    }
                                });
                            }
                        });
                    }
                });
            }
        });
    </script>
}
