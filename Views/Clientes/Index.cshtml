@model IEnumerable<sistemaVeterinario.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Gestión de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Run)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Run)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning">Editar</a>
                <button class="btn btn-danger" onclick="eliminarCliente(@item.IdCliente)">Eliminar</button>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        const eliminarCliente = async (id) => {
            const { isConfirmed } = await Swal.fire({
                title: '¿Está seguro de eliminar?',
                text: "No podrá revertir esta acción.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, ¡eliminar!',
                cancelButtonText: 'Cancelar'
            });

            if (isConfirmed) {
                const response = await fetch(`@Url.Action("Delete", "Clientes")/${id}`);
                const result = await response.json();

                if (result === 'ok') {
                    await Swal.fire(
                        '¡Eliminado!',
                        'El cliente ha sido eliminado.',
                        'success'
                    );
                    location.reload();
                } else {
                    await Swal.fire(
                        'Error',
                        'Ocurrió un error al eliminar el cliente.',
                        'error'
                    );
                }
            }
        }
    </script>
}
