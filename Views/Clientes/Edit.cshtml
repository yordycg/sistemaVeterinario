@model sistemaVeterinario.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 m-0 font-weight-bold text-primary text-center">Editar Cliente</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <form asp-action="Edit" id="formClienteEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdCliente" />
                    <div class="form-group mb-3">
                        <label asp-for="Run" class="control-label"></label>
                        <input asp-for="Run" class="form-control" readonly />
                        <span id="e-Run" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span id="e-Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" onkeypress="return Validaciones.soloNumeros(event)" />
                        <span id="e-Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span id="e-Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span id="e-Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/validaciones.js"></script>
    <script>
        const verificarEmailDB = async (email, id) => {
            const url = `@Url.Action("ClienteEmailExists", "Clientes")?email=${email}&id=${id}`;
            const response = await fetch(url);
            return await response.json();
        }

        const formClienteEdit = document.getElementById('formClienteEdit');
        formClienteEdit.addEventListener('submit', async (event) => {
            await validarFormularioEdit(event);
        });

        const validarFormularioEdit = async (evt) => {

            const inputs = document.querySelectorAll('#formClienteEdit .form-control');

            for (const item of inputs) {
                if (item.value.trim() === '') {
                    item.classList.add('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '<span class="badge bg-danger">Campo Obligatorio</span>';
                } else {
                    item.classList.remove('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '';

                    if (item.id === "Email") {
                        const clienteId = @Model.IdCliente;

                        if (!Validaciones.validarEmail(item.value)) 
                        {
                            item.classList.add('is-invalid');
                            document.getElementById(`e-${item.id}`).innerHTML = '<span class="badge bg-danger">Formato Email incorrecto!</span>';
                        }
                        if (await verificarEmailDB(item.value, clienteId))
                        {
                            document.getElementById(`e-${item.id}`).innerHTML = '<span class="badge bg-danger">El Email ya se encuentra registrado!</span>';
                            item.classList.add('is-invalid');
                        }
                    }

                    item.classList.remove('is-valid');
                }
            }

            if (document.querySelectorAll('#formClienteEdit .is-invalid').length > 0){
                evt.preventDefault();
            }
        };
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
