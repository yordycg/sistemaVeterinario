<!-- Inclusión de la librería ApexCharts desde su CDN -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>
    // Se ejecuta cuando todo el contenido del DOM ha sido cargado.
    document.addEventListener('DOMContentLoaded', function () {

        // Hacemos una petición al endpoint que creamos en el HomeController.
        fetch('/Home/ObtenerAdminDashboardData')
            .then(response => {
                // Si la respuesta no es 'ok' (ej: error 500), lanzamos un error para que lo capture el .catch()
                if (!response.ok) {
                    throw new Error('La respuesta del servidor no fue exitosa.');
                }
                // Si la respuesta es 'ok', la convertimos a JSON.
                return response.json();
            })
            .then(data => {
                // Una vez que tenemos los datos, actualizamos el contenido de las tarjetas.
                document.getElementById('total-clientes').textContent = data.totalClientes;
                document.getElementById('total-mascotas').textContent = data.totalMascotas;
                document.getElementById('total-consultas').textContent = data.totalConsultas;

                // Dibujar el grafico (pasandole los datos de la consulta por mes).
                renderConsultasChart(data.consultasPorMes);
            })
            .catch(error => {
                // Mostrar el error en caso de algun fallo en el 'fetch' o al pasar a JSON.
                console.error('Error al obtener los datos para el dashboard:', error);
                // TODO: Aquí podrías mostrar un mensaje de error en la interfaz de usuario.
            });

        // Renderizar el grafico usando ApexCharts.
        function renderConsultasChart(consultasData) {
            // Necesitamos dos arrays: uno para las etiquetas (meses) y otro para los valores (cantidad).
            const meses = consultasData.map(item => item.mes);
            const cantidades = consultasData.map(item => item.cantidad);

            // Opciones de configuración para el gráfico.
            // Opciones para el gráfico.
            const options = {
                chart: {
                    type: 'bar', // tipo de gráfico: barras
                    height: 350
                },
                series: [{ // los datos que se van a mostrar
                    name: 'Número de Consultas',
                    data: cantidades
                }],
                xaxis: { // configuración del eje X
                    categories: meses
                },
                plotOptions: {
                    bar: {
                        horizontal: false,
                        borderRadius: 4
                    }
                },
                dataLabels: {
                    // No mostrar etiquetas de datos encima de las barras.
                    enabled: false 
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return val + " consultas"
                        }
                    }
                }
            };

            // Creamos una nueva instancia de ApexCharts, le pasamos el contenedor y las opciones.
            const chart = new ApexCharts(document.querySelector("#chart-consultas-mes"), options);
            
            // Renderizamos el gráfico.
            chart.render();
        }
    });
</script>

