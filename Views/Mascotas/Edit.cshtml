@model sistemaVeterinario.Models.Mascota

@{
    ViewData["Title"] = "Editar Mascota";
}

<h1>Editar Mascota</h1>

<h4>Mascota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="formMascotaEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMascota" />
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Dueño</label>
                <select asp-for="IdCliente" class="form-control form-select" asp-items="ViewBag.IdCliente">
                    <option value="">-- Seleccionar Dueño --</option>
                </select>
                <span id="e-IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEspecie" class="control-label">Especie</label>
                <select asp-for="IdEspecie" class="form-control form-select" asp-items="ViewBag.IdEspecie">
                    <option value="">-- Seleccionar Especie --</option>
                </select>
                <span id="e-IdEspecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRaza" class="control-label">Raza</label>
                <select asp-for="IdRaza" class="form-control form-select" asp-items="ViewBag.IdRaza">
                    <option value="">-- Seleccionar Raza --</option>
                </select>
                <span id="e-IdRaza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span id="e-Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" />
                <span id="e-Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" onkeypress="return Validaciones.soloNumeros(event)" />
                <span id="e-Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    <script src="~/js/validaciones.js"></script>
    <script>
        const formMascotaEdit = document.getElementById('formMascotaEdit');
        formMascotaEdit.addEventListener('submit', (e) => {
            validarFormularioMascotaEdit();
        });

        const validarFormularioMascotaEdit = (evt) => {
            const inputs = document.querySelectorAll('#formMascotaEdit .form-control, #formMascotaEdit .form-select');

            inputs.forEach(item => {
                if (item.value.trim() === '') {
                    item.classList.add('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '<span class="badge bg-danger">Campo Obligatorio!</span>';
                } else {
                    item.classList.remove('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '';
                    item.classList.remove('is-valid');
                }
            });

            if (document.querySelectorAll('#formMascotaEdit .is-invalid').length > 0) {
                evt.preventDefault();
            }
        }
    </script>
}
