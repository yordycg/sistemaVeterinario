@model sistemaVeterinario.Models.Mascota

@{
    ViewData["Title"] = "Registrar Mascota";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 m-0 font-weight-bold text-primary text-center">Registrar Mascota</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Sexo" class="control-label"></label>
                        <input asp-for="Sexo" class="form-control" />
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Edad" class="control-label"></label>
                        <input asp-for="Edad" class="form-control" />
                        <span asp-validation-for="Edad" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IdCliente" class="control-label"></label>
                        <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="IdEspecie" class="control-label">Especie</label>
                        <select id="IdEspecie" class="form-control" asp-items="ViewBag.IdEspecie">
                            <option value="">Seleccione una especie</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IdRaza" class="control-label"></label>
                        <select asp-for="IdRaza" class="form-control" asp-items="ViewBag.IdRaza">
                            <option value="">Seleccione una raza</option>
                        </select>
                        <span asp-validation-for="IdRaza" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('IdEspecie').addEventListener('change', function () {
            var especieId = this.value;
            var razaSelect = document.getElementById('IdRaza');
            razaSelect.innerHTML = '<option value="">Cargando...</option>';

            if (especieId) {
                fetch(`/Mascotas/GetRazasByEspecie?especieId=${especieId}`)
                    .then(response => response.json())
                    .then(data => {
                        razaSelect.innerHTML = '<option value="">Seleccione una raza</option>';
                        data.forEach(function (raza) {
                            var option = document.createElement('option');
                            option.value = raza.idRaza;
                            option.text = raza.nombreRaza;
                            razaSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error fetching razas:', error);
                        razaSelect.innerHTML = '<option value="">Error al cargar razas</option>';
                    });
            } else {
                razaSelect.innerHTML = '<option value="">Seleccione una raza</option>';
            }
        });
    </script>
}
