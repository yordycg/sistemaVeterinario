@model sistemaVeterinario.Models.Tratamiento

@{
    ViewData["Title"] = "Crear Tratamiento";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h1 class="h3 m-0 font-weight-bold text-primary text-center">Crear Nuevo Tratamiento</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Medicamento" class="control-label"></label>
                        <input asp-for="Medicamento" class="form-control" />
                        <span asp-validation-for="Medicamento" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IdConsulta" class="control-label">Mascota - Fecha</label>
                        <select asp-for="IdConsulta" class ="form-control" asp-items="ViewBag.IdConsulta"></select>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('formTratamientoCreate').addEventListener('submit', (event) => {
            event.preventDefault();

            document.querySelectorAll('#formTratamientoCreate .form-control').forEach((item) => {
                if (item.value.trim() == ''){
                    item.classList.add('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '<span class="badge bg-danger">Campo Obligatorio!</span>';

                } else {
                    item.classList.remove('is-invalid');
                    document.getElementById(`e-${item.id}`).innerHTML = '';
                    item.classList.add('is-valid');
                }
            });

            if (document.querySelectorAll('.is-invalid').length === 0){
                event.target.submit();
            }
        });
    </script>
}