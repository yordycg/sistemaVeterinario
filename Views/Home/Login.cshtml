@{
    // Esto nos permite EVITAR el uso del _layout.cshtml
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <title>Login - Sistema Veterinario</title>
    <link rel="stylesheet" crossorigin href="~/css/template.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    @* TODO: implementar logo en la pestaña del naveagador (agregar al _Layout) *@
</head>
<body>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(@Url.Content("~/images/clinica_veterinaria.jpg"));">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4 text-center">Ingresar al Sistema</h3>
                            </div>
                        </div>
                        <form method="post" class="signin-form">
                            <div class="form-group mb-3">
                                <label class="label" for="name">Email</label>
                                <input type="email" name="email" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Password" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <span class="badge bg-danger">@ViewBag.Error</span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
</html>
