@{
    ViewData["Title"] = "Dashboard";
}

@if (User.IsInRole("Admin"))
{
    <h1 class="display-4">Bienvenido, Admin</h1>
    <partial name="_AdminDashboard" />
}
else if (User.IsInRole("Veterinari@"))
{
    <h1 class="display-4">Bienvenid@@, Veterinari@@</h1>
    @* <p>El dashboard para veterinarios está en construcción.</p> *@
    <partial name="_VetDashboard" />
}
else if (User.IsInRole("Recepcionista"))
{
    <h1 class="display-4">Bienvenid@@, Recepcionista</h1>
    @* <p>El dashboard para recepcionistas está en construcción.</p> *@
    <partial name="_RecepDashboard" />
}
else
{
    // Vista por defecto para otros usuarios o si no se encuentra un rol específico
    <div class="text-center">
        <h1 class="display-4">Bienvenido</h1>
        <p>Bienvenido al sistema de gestión de la clínica veterinaria.</p>
    </div>
}
